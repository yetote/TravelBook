<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/trip_fragment_shorttrip_insert"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/trip_fragment_shorttrip_tv"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/jiahao" />

            <Button
                android:id="@+id/trip_fragment_shorttrip_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/wenhao" />


            <utils.ScrollRemoveRecyclerView.MyRv
                android:id="@+id/trip_fragment_shorttrip_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/trip_fragment_shorttrip_tv">

            </utils.ScrollRemoveRecyclerView.MyRv>

            <Button
                android:id="@+id/trip_fragment_longtrip_insert"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/trip_fragment_longtrip_tv"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/jiahao" />

            <Button
                android:id="@+id/trip_fragment_longtrip_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/trip_fragment_longtrip_tv"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/wenhao" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trip_fragment_longtrip_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/trip_fragment_longtrip_tv">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/trip_fragment_longtrip_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/trip_fragment_shorttrip_rv"
                android:layout_marginTop="5dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="@string/long_trip"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/trip_fragment_shorttrip_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/grey"
                android:gravity="center"
                android:text="@string/short_trip"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
