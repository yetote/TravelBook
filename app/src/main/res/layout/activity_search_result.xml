<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tf.travelbook.SearchResult">
    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        app:title="搜索"
        app:titleTextColor="@color/white" />

    <SearchView
        android:id="@+id/searchresult_searchview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/about_toolbar"
        android:layout_alignParentStart="true"></SearchView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchresult_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchresult_searchview"
        android:layout_centerHorizontal="true"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
